int validation(int last)
{
	int n; std::cin >> n;
	bool valid = false;
	while (!valid)
	{
		if (n<=last && n>=1)
		{
			valid = true;
		}
		else
		{
			if (!std::cin) //prevents char from breaking code
			{
				std::cin.clear();
				std::cin.ignore();
				/*With multiple char the err message repeats
				But will still run code*/
			}
			std::cout << "\n Please input a valid option: ";
			std::cin >> n;
	}
	}
	return n;
}

	string Course1; 
	string Course2; 
